page(backtop="30mm" footer="page")
    page_header
        .d-flex
            img(src=`views/imagenes/logoMatanza.png` width=100)
            span(style="margin-left:500px;") Fecha: #{fecha}
    .d-sm-flex.align-items-center.justify-content-between.my-4
        h1(class="h3 mb-0 text-gray-800") Reporte de #{titulo_listado}
    .row.mt-5(style="font-size:10px")
        .col-md-8
            table.table.table-striped
                tbody
                    each dato ,index in info
                        tr
                            th(scope="row" style={padding:'5px',background:'#2171cc',color:'white'})= index.charAt(0).toUpperCase()+index.substr(1).replace("_"," ")
                            if !dato
                                td(style={padding:'5px'}) sin especificar
                            else
                                td(style={padding:'5px'})= dato
    if qr
        .col-md-4(style={position:'absolute',right:'100', top:'100'})
            img(src=`views/qr/proforma_${qr}.png` width=100)