extends ./components/template
block titulo
    - titulo="Registrar";
block body
    .col-md-4.mx-auto
        .row
            .col-12.text-center
                img(src="./views/imagenes/logoMatanza.png" alt="" class="mt-3" style="width: 150px")
            .col-12
                h1.text-center.mt-2 Registrarse
                form(action="index.html")
                    .form-group
                        input(type="number" class="form-control" placeholder="Ingrese su DNI")
                    .form-group
                        input(type="text" class="form-control" placeholder="Ingrese su nombre")
                    .form-group
                        input(type="text" class="form-control" placeholder="Ingrese su apellido")
                    .form-group
                        input(type="date" class="form-control" placeholder="dd/mm/aaaa")
                    .form-group
                        input(type="email" class="form-control " id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese su email")
                    .form-group
                        input(type="password" class="form-control" id="exampleInputPassword1" placeholder="Ingrese su contraseña")
                    .form-group
                        input(type="password" class="form-control" placeholder="Confirme su contraseña")
                    button(type="submit" class="btn btn-block  btn-primary") Crear cuenta
                    button(type="submit" class="btn btn-block  btn-outline-primary ") Cancelar