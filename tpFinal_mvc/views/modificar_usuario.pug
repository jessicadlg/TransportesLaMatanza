extends ./components/template
block titulo
    - titulo=`Modifique sus Datos`;
block body
    include ./components/header
    .container.my-5
        h1.text-center Modificar Datos
        form(action=`procesar?dni=${datos['dni']}` method="post")
            .form-group
                input(type="number" name="dni" class="form-control" readonly value=`${datos['dni']}` placeholder="Ingrese su DNI")
            .form-group
                input(type="text" name="nombre" class="form-control" value=`${datos['nombre']}` placeholder="Ingrese su nombre")
            .form-group
                input(type="text" name="apellido" class="form-control" value=`${datos['apellido']}` placeholder="Ingrese su apellido")
            .form-group
                input(type="date" name="fecha_nacimiento" value=`${datos['fecha de nacimiento']}` class="form-control" placeholder="dd/mm/aaaa")
            .form-group
                select(name="area" class="form-control" id="area")
                    option(value="0" selected disabled) Seleccione su area
                    each rol in roles
                        if area==rol['codigo']
                            - selected=true;
                        else
                            - selected=false;
                        option(value=`${rol['codigo']}` selected=selected) #{rol['descripcion']}
            .form-group
                input(type="text" name="tipo_licencia" value=`${tipo_licencia}` class="form-control d-none" id="tipo_licencia" placeholder="Ingrese su tipo de licencia")
            .form-group
                input(type="email" name="email" value=`${datos['email']}` class="form-control " id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese su email")
            button.btn.btn-success(type="submit" name="modificarDatos") Modificar Datos
block script
    script(src="../views/js/registrar.js")